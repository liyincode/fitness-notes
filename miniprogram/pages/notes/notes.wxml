<!-- miniprogram/pages/test/test.wxml -->
<view class="page">
  <view class="padding bg-white">
    <view class="flex align-center">
      <button class="cu-btn userinfo-btn" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo"></button>
      <view class="cu-avatar xl round" style="background-image:url({{userInfo.avatarUrl}})" />
      <view class="margin-left text-lg">{{userInfo.nickName}}</view>
    </view>
  </view>
  <scroll-view scroll-y="true">
    <block wx:for="123">
      <view class="cu-bar bg-white solid-bottom margin-top">
        <view class="action">
          <text class="cuIcon-title text-orange "></text>
          4/29 12:57
        </view>
      </view>
      <view class="cu-list menu ">
        <block wx:for="123">
          <view class="cu-item">
            <view class="content text-cut">
              <text class="cuIcon-voice text-green"></text>
              <text class="text-gray">去玩儿无群二无群二群无若无群二额无群若群翁让我签二无群二无群二</text>
            </view>
            <view class="action">
              <!-- <button class="cu-btn round bg-green shadow ">
              <text class="cuIcon-upload"></text>
              播放
            </button> -->
              <button class="cu-btn icon">
                <text class="cuIcon-playfill"></text>
              </button>
              <button class="cu-btn round bg-cyan shadow margin-left" bindtap="showModal" data-target="Modal">
                <text class="cuIcon-upload"></text>
                详情
              </button>
            </view>
          </view>
        </block>
      </view>
    </block>
  </scroll-view>
  <view class="cu-modal {{modalName=='Modal'?'show':''}}">
    <view class="cu-dialog">
      <view class="cu-bar bg-white justify-end">
        <view class="content">Modal标题</view>
        <view class="action" bindtap="hideModal">
          <text class="cuIcon-close text-red"></text>
        </view>
      </view>
      <view class="padding-xl">Modal 内容。</view>
    </view>
  </view>
</view>